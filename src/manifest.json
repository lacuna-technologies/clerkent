{
  "manifest_version": 2,
  "name": "Clerkent",
  "version": "0.0.1",
  "icons": {
    "16": "assets/favicon-16.png",
    "32": "assets/favicon-32.png",
    "48": "assets/favicon-48.png",
    "64": "assets/favicon-64.png",
    "128": "assets/favicon-128.png"
  },
  "description": "an unassuming clerk with a superhuman ability to download PDFs of judgments and academic articles",
  "homepage_url": "https://github.com/abhijithvijayan/web-extension-starter",
  "short_name": "Clerkent",
  "permissions": [
    "storage",
    "downloads",
    "https://www.bailii.org/*",
    "http://www.commonlii.org/*",
    "https://www.lawnet.sg/*",
    "https://www.singaporelawwatch.sg/*",
    "https://www.supremecourt.gov.sg/*",
    "https://curia.europa.eu/juris/*",
    "https://www.hklii.hk/"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "__chrome|firefox__author": "Huey",
  "__chrome__minimum_chrome_version": "49",
  "__chrome|opera__options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "__chrome__chrome_style": false
  },
  "background": {
    "page": "background.html",
    "__chrome|opera__persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://ukconstitutionallaw.org/*",
        "https://www.lexology.com/*",
        "https://beta.constructionlaw.sg/*",
        "https://www.bailii.org/*",
        "https://www.lawnet.sg/*",
        "https://www.singaporelawwatch.sg/*",
        "https://www.supremecourt.gov.sg/*",
        "https://lawgazette.com.sg/*",
        "https://sites.google.com/view/clerkent-test/*",
        "http://www.commonlii.org/*",
        "https://publiclawforeveryone.com/*",
        "https://singaporelawblog.sg/*"
      ],
      "js": [
        "js/contentScript.bundle.js"
      ],
      "css": [
        "css/contentScript.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "assets/favicon-16.png",
      "32": "assets/favicon-32.png"
    },
    "default_title": "Open the Clerkent menu",
    "default_popup": "popup.html"
  }
}